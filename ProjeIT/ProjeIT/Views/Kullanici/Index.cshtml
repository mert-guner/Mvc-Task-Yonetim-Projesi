@using ProjeIT.Models.Entity
@model List<task>



<div class="col-12">
    <div class="card">


        <div class="card-body bg-danger">

            <h5 class="card-title">Görevler</h5>

            <table id="tbl1" class="table table-bordered bg-white">
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>Başlık</td>
                        <td>İçerik</td>
                        <td>Aciliyet Durumu</td>
                        <td>Süresi</td>
                        <td>Durum</td>
                        <td>Güncelle</td>

                    </tr>
                </thead>

                <tbody>

                    @foreach (var urun in Model)
                    {

                        if (urun.calisan.ToString() == Session["id"].ToString() && urun.aciliyet_durumu == 1)
                        {
                            <tr>
                                <td>@urun.id</td>
                                <td>@urun.baslik</td>
                                <td>@urun.icerik</td>
                                <td>@urun.aciliyetDurum.aciliyet_durum</td>
                                <td>@urun.bitirilme_sure</td>

                                <td>@urun.durum</td>


                                <td><a class="btn btn-primary" href="/Kullanici/Guncelle/@urun.id">Guncelle</a></td>


                            </tr>
                        }



                    }

                </tbody>

            </table>

        </div>

    </div>
</div><!-- End Reports -->

