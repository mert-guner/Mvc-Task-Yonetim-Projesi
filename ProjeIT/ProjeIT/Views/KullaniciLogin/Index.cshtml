
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kullanıcı Giriş Paneli</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <style>
        .divider:after,
        .divider:before {
            content: "";
            flex: 1;
            height: 1px;
            background: #eee;
        }

        body {
            padding-top: 150px;
        }
    </style>



</head>
<body>



    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="accordion-header">
                    <h2 class="modal-title" style="padding-left:50px; padding-top:50px;">Üyelik Kayıt Bilgisi</h2>
                </div>
                @using (Html.BeginForm("Uye", "KullaniciLogin", FormMethod.Post))
                {
                    <div style="padding:50px;">
                        <form class="form-group">

                            <div class="form-floating mb-3">

                                <input type="text" class="form-control" id="floatingInput" placeholder="İsim" name="Adi" required>

                            </div>

                            <div style="margin-top:20px;" class="form-floating mb-3">

                                <input type="text" class="form-control" id="floatingInput" placeholder="Soyisim" name="Soyadi" required>

                            </div>


                            <div style="margin-top:20px;" class="form-floating mb-3">

                                <input type="email" class="form-control" id="floatingInput" placeholder="Email Adresi" name="kullanici_adi" required>

                            </div>

                            <div style="margin-top:20px;" class="form-floating mb-3">
                                <input type="password" class="form-control" id="floatingPassword" placeholder="Şifre" name="sifre" required>

                            </div>

                            <div style="margin-top:50px;">
                                <button type="submit" class="btn btn-info" style="color:white;">Üye Ol</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                            </div>
                        </form>
                    </div>

                }
            </div>
        </div>
    </div>






    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="https://i.imgur.com/uNGdWHi.png"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

                    @using (Html.BeginForm("Index", "KullaniciLogin", FormMethod.Post))
                    {
                        <div class="pb-5">
                            <h2>Kullanıcı Giriş Ekranı</h2>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="form1Example13" class="form-control form-control-lg" placeholder="Email adresi" name="kullanici_adi" required />

                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="form1Example23" class="form-control form-control-lg" placeholder="Şifre" name="sifre" required />

                        </div>


                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Giriş</button>
                        <a class="btn btn-danger btn-lg btn-block" href="#" data-toggle="modal" data-target="#Modal1">Üye Ol</a>

                        <hr />

                        <a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="/Login/Index"
                           role="button">
                            <i class="fab fa-facebook-f me-2"></i>Yönetici Giriş Ekranı
                        </a>
                    }

                </div>
            </div>
        </div>
    </section>


</body>
</html>
